#########
# SETUP #
#########
set $mod Mod4               
floating_modifier $mod     
workspace_layout stacking 
font pango:monospace 16  
focus_follows_mouse no  

####################
# STARTUP PROGRAMS #
####################
exec --no-startup-id feh --bg-scale /home/arrjay/Pictures/bg.png
exec --no-startup-id nm-applet
exec --no-startup-id pactl load-module module-bluetooth-discover
exec --no-startup-id blueman-applet
exec --no-startup-id synclient HorizEdgeScroll=1 VertEdgeScroll=1 VertScrollDelta=-111

###############
# KEYBINDINGS #
###############
bindsym $mod+Return exec i3-sensible-terminal 
bindsym $mod+q kill                          
bindsym $mod+d exec dmenu_run               
bindsym $mod+minus split h                 
bindsym $mod+bar split v                  
bindsym $mod+f fullscreen toggle         
bindsym $mod+s layout stacking          
bindsym $mod+w layout tabbed           
bindsym $mod+e layout toggle split    
bindsym $mod+c reload                
bindsym $mod+r restart              
bindsym $mod+Shift+e exit          
bindsym $mod+Shift+q exec i3lock -i /home/arrjay/Pictures/bg.png
bindsym $mod+v exec nmcli con up ProtonVPN
bindsym $mod+x exec nmcli con down ProtonVPN
bindsym $mod+t exec toggletouch

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

#########
# MODES #
#########

# Mode to resize containers
mode "resize" { 
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym q mode "default"
}

# Enter resize mode
bindsym $mod+Shift+r mode "resize"

# Mode to open programs
mode "open" {
    bindsym f exec "i3-msg exec firefox && i3-msg mode 'default'"
    bindsym s exec "i3-msg exec slack && i3-msg mode 'default'"
    bindsym m exec "i3-msg exec spotify && i3-msg mode 'default'"
    bindsym e exec "i3-msg exec thunderbird && i3-msg mode 'default'"
    bindsym t exec "i3-msg exec texstudio && i3-msg mode 'default'"
}

# Got to open mode
bindsym $mod+o mode "open"

##########
# COLORS #
##########

# Monokai Colors
set $black #272822  
set $black_light #383830
set $pink #F92672
set $orange #FD971F
set $blue #66D9EF
set $green #A6E22E

client.focused $black $green $pink $black_light
client.focused_inactive $black $blue $pink $black_light
client.unfocused $black $black_light $pink $black_light
client.urgent $black $pink $black $black

##############
# STATUS BAR #
##############

# Status bar with Monokai colors
bar {
    position top
    status_command i3status -c ~/.i3/i3status.conf
    colors {
        separator $blue
        background $black_light
        statusline $green
        focused_workspace $green $green $pink
        active_workspace $blue $blue $pink
        inactive_workspace $black $black $pink
        urgent_workspace $orange $orange $pink
    }
}

################
# MAC SPECIFIC #
################

# Screen brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Volume Controls
bindcode 123 exec --no-startup-id amixer -D pulse sset Master 5%+
bindcode 122 exec --no-startup-id amixer -D pulse sset Master 5%-
bindcode 121 exec --no-startup-id amixer -D pulse sset Master toggle

# Media Player Controls
bindcode 172 exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Keyboard Backlight
bindcode 237 exec kbdbacklight -dec 20 
bindcode 238 exec kbdbacklight -inc 20
